<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/top" />
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="visible" >

        <FrameLayout
            android:id="@+id/banner_box"
            android:layout_width="fill_parent"
            android:layout_height="195dp"
            android:focusable="true" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        </FrameLayout>

        <LinearLayout
            android:id="@+id/viewgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4.5dp"
        android:background="#FDFBF6"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="center">
        
	        <LinearLayout
	            android:id="@+id/home_website"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1.0"
	            android:orientation="horizontal"
	            android:gravity="center">
	            
	            <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="14dp"
                        android:src="@drawable/home_1" />
	            
	        </LinearLayout>
        
	        <LinearLayout
	            android:id="@+id/home_phone"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1.0"
	            android:orientation="horizontal"
	            android:gravity="center">
	            
	            <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="14dp"
                        android:src="@drawable/home_2" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/home_weixin"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1.0"
	            android:orientation="horizontal"
	            android:gravity="center">
	            
	            <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="14dp"
                        android:src="@drawable/home_3" />
	            
	        </LinearLayout>
        
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="center">
	        
            <LinearLayout
	            android:id="@+id/home_case"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1.0"
	            android:orientation="horizontal"
	            android:gravity="center">
	            
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="14dp"
                        android:src="@drawable/home_4" />
	            
	        </LinearLayout>
        
	        <LinearLayout
	            android:id="@+id/home_product"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1.0"
	            android:orientation="horizontal"
	            android:gravity="center">
                
	            <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="14dp"
                        android:src="@drawable/home_5" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/home_news"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1.0"
	            android:orientation="horizontal"
	            android:gravity="center">
	            
	            <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="14dp"
                        android:src="@drawable/home_6" />
	            
	        </LinearLayout>
	        
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
